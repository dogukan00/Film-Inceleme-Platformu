@model Movie

<form method="post">
    <input type="hidden" name="Id" value="@Model.Id" />
  <div class="form-group">
      <label for="Name">Name</label>
      <input asp-for="Name" value="@Model.Name" class="form-control">
  </div>
  <div class="form-group">
      <label for="ShortDescription">ShortDescription</label>
      <input asp-for="ShortDescription" value="@Model.ShortDescription" class="form-control">
  </div>
  <div class="form-group">
      <label for="Description">Description</label>
      <textarea asp-for="Description" value="@Model.Description" class="form-control"></textarea>
  </div>
  <div class="form-group">
      <label for="ImageUrl">ImageUrl</label>
      <input asp-for="ImageUrl" value="@Model.ImageUrl" class="form-control">
  </div>
  <div class="form-group">
      <label for="CategoryId">CategoryId</label>
      <select asp-for="CategoryId" asp-items="@ViewBag.Categories" class="form-control">
            <option selected disabled>Kategori Se√ßiniz</option>
            
      </select>
  </div>
  <button type="submit" class="btn btn-primary mt-3">Submit</button>
</form>