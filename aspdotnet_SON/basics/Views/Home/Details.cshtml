@model Movie

<div class="row">
    <div class="col-md-2" >
        @await Component.InvokeAsync("CategoryMenu")
    </div>
    <div class="col-md-10">
         <div class="card mb-3">

              <div class="card-body" style="background-color:#F6F6FF ;">
                   <div class="row no-gutter">
                         <div class="col-md-4">
                            <img src="~/img/@Model.ImageUrl" alt="@Model.Description" class="card-img">
                        </div>
                        <div class="col-md-8">
                        
                                <h5 class="card-title">
                                <a style ="text-decoration: none;" asp-action="Details" asp-controller="Home" asp-route-id="@Model.Id">  
                                    @Model.Name</a> 
                                </h5>
                                <p class="card-text">
                                     @Html.Raw(Model.Description)
                                </p>
                                <p class="card-text">
                                    <small class="text-muted">3 days ago</small>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
    </div>
</div>